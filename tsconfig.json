{
  "compilerOptions": {
    "baseUrl": "tsconfig",
    "declaration": true,
    "emitDeclarationOnly": true,
    "lib": ["ES2022", "dom"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "rootDir": "src/",
    "outDir": "./dist",
    "strict": true,
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["tests/**"]
}
